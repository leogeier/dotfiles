#!/bin/bash

# This file contains shell-independent configurations.
# Any configurations that are specific to a machine
# should be put in .local-source-cfg

alias dotconfig='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

alias pingg="ping 8.8.8.8"

MYVIMRC="$HOME/.vimrc"

if [ -f "$HOME/.local-source-cfg" ]; then
  source "$HOME/.local-source-cfg"
fi

mkcd() {
  mkdir "$1"
  cd "$1"
}

unalias gcm
gcm() {
  if git show-ref --verify --quiet refs/heads/main; then
    git checkout main
  else
    git checkout master
  fi
}

kowalski,() {
        if [[ $2 == "analysis" ]]
        then
                git status "${@:2}"
        fi
}

pdb() {
  python3 -m pdb "$@"
}

alias json="python3 -m json.tool"

alias serv="python3 -m http.server"

export PATH="/home/leo/.pyenv/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

export FZF_DEFAULT_COMMAND="$SHELL -c \"source $HOME/.local-source-cfg && fd --type file --hidden --exclude '{.git,node_modules,.cache,.clangd}' --follow --color=always --no-ignore\""
export FZF_DEFAULT_OPTS="--ansi"

alias tmuxx='tmux new -s'
